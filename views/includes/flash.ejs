<link rel="stylesheet" href="/css/flash.css">

<% if (success && success.length) { %>
  <div class="flash-message success-flash">
    <span><%= success %></span>
    <button class="flash-close" onclick="this.parentElement.classList.add('fade-out'); setTimeout(() => this.parentElement.remove(), 100);">❌</button>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="flash-message error-flash">
    <span><%= error %></span>
    <button class="flash-close" onclick="this.parentElement.classList.add('fade-out'); setTimeout(() => this.parentElement.remove(), 100);">❌</button>
  </div>
<% } %>

<% if (notFound && notFound.length) { %>
  <div class="flash-message error-flash">
    <span><%= notFound %></span>
    <button class="flash-close" onclick="this.parentElement.classList.add('fade-out'); setTimeout(() => this.parentElement.remove(), 100);">❌</button>
  </div>
<% } %>

<script src="/script/flash.js"></script>